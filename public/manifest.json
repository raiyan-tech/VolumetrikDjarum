    }
  ],

  "shortcuts": [
    {
      "name": "Browse Library",
      "short_name": "Library",
      "description": "Browse volumetric performances",
      "url": "/library.html",
      "icons": [
        {
          "src": "/assets/shortcut-library.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View in AR",
      "short_name": "AR Mode",
      "description": "Experience performances in augmented reality",
      "url": "/player.html?ar=true",
      "icons": [
        {
          "src": "/assets/shortcut-ar.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Admin Console",
      "short_name": "Admin",
      "description": "Manage users and analytics",
      "url": "/admin/index.html",
      "icons": [
        {
          "src": "/assets/shortcut-admin.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],

  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "4ds_file",
          "accept": [".4ds", "application/octet-stream"]
        }
      ]
    }
  },

  "protocol_handlers": [
    {
      "protocol": "web+volumetrik",
      "url": "/player.html?video=%s"
    }
  ],

  "related_applications": [],
  "prefer_related_applications": false,

  "file_handlers": [
    {
      "action": "/player.html",
      "accept": {
        "application/octet-stream": [".4ds"]
      },
      "launch_type": "single-client"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 480
  },

  "handle_links": "preferred",

  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },

  "permissions_policy": {
    "camera": ["self"],
    "microphone": [],
    "geolocation": [],
    "xr-spatial-tracking": ["self"]
  },

  "iarc_rating_id": ""
}
